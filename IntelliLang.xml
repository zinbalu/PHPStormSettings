<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="TEXT" injector-id="xml">
      <display-name>img/@src</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("src")).withParent(xmlTag().withLocalName(string().equalTo("img")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>